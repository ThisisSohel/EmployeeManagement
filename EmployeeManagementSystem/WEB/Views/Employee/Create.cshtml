@model Models.ViewModel.EmployeeCreateViewModel

@{
	ViewBag.Title = "Employee List";
}

<!-- Button to trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#createEmployeeModal">
	Create New Employee
</button>

<!-- Create New Employee Modal -->
<div class="modal fade" id="createEmployeeModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header" style="background-color: #1d4552;">
				<h1 class="modal-title fs-5 w-100 text-center" style="color: white;">Create New Employee</h1>
				<button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body" style="background-color: darkgray;">
				<div class="container my-3 p-2 text-center">
					@using (Html.BeginForm("CreateAsync", "Employee", FormMethod.Post))
					{
						<div class="row mb-3">
							<label for="EmployeeName" class="col-sm-3 col-form-label text-start" style="color:black;">Employee Name</label>
							<div class="col-sm-9">
								@Html.TextBoxFor(m => m.EmployeeName, new { @class = "form-control", id = "EmployeeName", style = "background-color:#f5f5f5", placeholder = "Enter employee name" })
								@Html.ValidationMessageFor(m => m.EmployeeName, "", new { @class = "text-danger text-start" })
							</div>
						</div>

						<div class="row mb-3">
							<label for="Email" class="col-sm-3 col-form-label text-start" style="color:black;">Email</label>
							<div class="col-sm-9">
								@Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "Email", style = "background-color:#f5f5f5", placeholder = "Enter email" })
								@Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger text-start" })
							</div>
						</div>

						<div class="row mb-3">
							<label for="Mobile" class="col-sm-3 col-form-label text-start" style="color:black;">Mobile</label>
							<div class="col-sm-9">
								@Html.TextBoxFor(m => m.Mobile, new { @class = "form-control", id = "Mobile", style = "background-color:#f5f5f5", placeholder = "Enter mobile number" })
								@Html.ValidationMessageFor(m => m.Mobile, "", new { @class = "text-danger text-start" })
							</div>
						</div>

						<div class="row mb-3">
							<label for="DateOfBirth" class="col-sm-3 col-form-label text-start" style="color:black;">Date of Birth</label>
							<div class="col-sm-9">
								@Html.TextBoxFor(m => m.DateOfBirth, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", id = "DateOfBirth", style = "background-color:#f5f5f5" })
								@Html.ValidationMessageFor(m => m.DateOfBirth, "", new { @class = "text-danger text-start" })
							</div>
						</div>

						<div class="row mb-3">
							<label for="Photo" class="col-sm-3 col-form-label text-start" style="color:black;">Photo</label>
							<div class="col-sm-9">
								<input type="file" name="Photo" id="Photo" class="form-control" style="background-color:#f5f5f5" />
								@Html.ValidationMessageFor(m => m.Photo, "", new { @class = "text-danger text-start" })
							</div>
						</div>

						<div class="row">
							<div class="col text-center">
								<button type="submit" class="btn btn-primary" style="background-color: #1d4552;">Create</button>
							</div>
						</div>
					}
				</div>
			</div>
			<div class="modal-footer" style="background-color: #1d4552;">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal" style="background-color:#a9a9a9;">Close</button>
			</div>
		</div>
	</div>
</div>
